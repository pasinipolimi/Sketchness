# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Sketchness.index()
GET     /room                       controllers.Sketchness.chatRoom(username: String ?= null, room: String ?= null)
GET     /room/chat                  controllers.Sketchness.chat(username: String ?= null,room: String ?= null)
GET     /stream                     controllers.Sketchness.stream()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

#Retrieving internazionalization messages
GET /i18n controllers.JavaScriptController.i18n()
